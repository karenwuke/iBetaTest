<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ke.ibetatesting.view.signupActivity">
    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bitmap" />

    <EditText
        android:id="@+id/newtName"
        android:layout_width="260dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/newtpwd"
        android:layout_alignStart="@+id/newtpwd"
        android:layout_centerVertical="true"
        android:background="@drawable/username"
        android:hint="Username"
        android:paddingLeft="60dp" />
    <EditText
        android:hint="Password"
        android:paddingLeft="60dp"
        android:id="@+id/newtpwd"
        android:layout_width="260dp"
        android:layout_height="75dp"
        android:background="@drawable/pwd"
        android:layout_below="@id/newtName"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/signup_btn"
        android:layout_width="260dp"
        android:layout_height="75dp"
        android:background="@drawable/signup"
        android:layout_below="@+id/newtpwd"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
